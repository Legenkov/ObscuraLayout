<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/backMessage">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_chat_profile"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/ic_profile_photo_dummy" />

    <TextView
        android:id="@+id/tv_item_chat_date_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Время"
        android:textColor="@color/timeChat"
        android:textSize="8sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/tv_item_chat_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="11dp"
            android:text="Тема"
            android:textColor="@color/themeChat"
            android:textSize="11sp"
            android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_item_chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="30dp"
        android:text="Любое Имя"
        android:textColor="@color/messageText"
        android:textSize="9sp"
       />
    <TextView
        android:id="@+id/tv_item_chat_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_item_chat_user_name"
        android:layout_marginTop="30dp"
        android:text=" - Последнее сообщение"
        android:textColor="@color/messageText"
        android:textSize="9sp"
        />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>


